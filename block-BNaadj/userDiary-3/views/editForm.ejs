<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css" />
    <title>user edit</title>
  </head>
  <body>
    <header>
      <h1>User Form</h1>
    </header>
    <main>
      <div class="container">
        <form action="/user/<%= user.id %>/update" method="post">
          <input
            type="text"
            name="name"
            placeholder=" name"
            value="<%= user.name %>"
          />
          <input
            type="email "
            name="email"
            placeholder="email"
            value="<%= user.email %>"
          />
          <input
            type="number"
            name="age"
            placeholder="age"
            value="<%= user.age %>"
          />
          <input
            type="text"
            name="address"
            placeholder="address"
            value="<%= user.address %>"
          />
          <textarea name="bio" id="" cols="30" rows="10" placeholder="bio">
<%= user.bio %>
          </textarea
          ><br />
          <input
            type="text"
            name="hobbies"
            placeholder="hobbies"
            value="<%= user.hobbies %>"
          />
          <input type="submit" value="update" />
        </form>
      </div>
    </main>
  </body>
</html>
